@using WebProductManagement.Models;
@model List<Category>
@{
    ViewBag.Title = "Create";
}

<h2>Create Product</h2>
<hr />
<form method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="Name">Name</label>
            <div class="col-md-10">
                <input type="text" name="Name" id="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <div class="col-md-10">
                <input type="text" name="Description" id="Description" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="Stock">Stock</label>
            <div class="col-md-10">
                <input type="number" step="1" min="0" value="0" name="Stock" id="Stock" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <div class="col-md-10">
                <input type="number" step="0.01" min="0" value="0" name="Price" id="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="Category">Category</label>
            <div class="col-md-10">
                <select name="Category" id="Category" class="form-control">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Image">Image</label>
            <div class="col-md-10">
                <input type="file" name="Image" id="Image" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="checkbox" data-val="true" value="true" name="IsStatus" id="IsStatus" />
                <label for="IsStatus">IsStatus</label>

                <input type="hidden" value="false" name="IsStatus" id="IsStatus" />
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Create Product</button>
        </div>
    </div>
</form>